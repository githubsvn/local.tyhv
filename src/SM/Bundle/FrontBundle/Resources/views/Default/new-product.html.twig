<div class="block new-specialty">
<div class="title-2">
  <div class="inner">
    <h2><span><span>{{ 'New Product'|trans({}, 'SMFrontBundle') }}</span></span></h2>
<!--    <a href="#" title="Xem thêm" class="readmore">Xem thêm</a>-->
  </div>
</div>
<div class="thumbnails-1">
    <ul>
      {% if entities|length  > 0%}
        {% for ent in entities %}
            <li>
                {% if ent.product.thumb  > 0%}
                    <a href="{{ path('sm_front_view_product_detail', { 'slug': mtxbuildurl(ent.product.id, ent.name) }) }}" title="{{ mtxgetteaser(ent.name)|raw }}"">
                        <span class="wi-frame wi-frame-2"><span><span>
                            <img src="{{ asset(uploadPath ~ ent.product.thumb) }}" alt="{{ mtxgetteaser(ent.name, countWordProductTitle)|raw }}"/>
                        </span></span></span>
                    </a>
                {% else %}
                    <a href="{{ path('sm_front_view_product_detail', { 'slug': mtxbuildurl(ent.product.id, ent.name) }) }}" title="{{ mtxgetteaser(ent.name)|raw }}">
                        <span class="wi-frame wi-frame-2"><span><span>
                            <img src="{{asset('/web/front/images/no-image.jpg')}}" alt="#" width="157" height="104" alt="{{ mtxgetteaser(ent.name, countWordProductTitle)|raw }}"/>
                        </span></span></span>
                    </a>
                {% endif %}
            </li> 
        {% endfor %}
      {% else %}
            <div class="noProduct">{{ 'No data was be found'|trans({}, 'SMFrontBundle') }}</div>
      {% endif %}
  </ul>
</div>
</div>