{% if entities|length  > 0%}
    <div class="price-block">
        <h2 class="title-1">{{ 'Market price'|trans({}, 'SMFrontBundle') }}</h2>
        <div class="price-content">
            {% for ent in entities %}
                {% set itemType = ent['itemtypes']%}
                {% set items = ent['items']%}
                <table style="width: 209px;">
                    <caption>{{ itemType.name }} </caption>
                    <tr>
                        <th>{{ 'Item'|trans({}, "SMFrontBundle") }}</th>
                        <th>{{ 'Old price'|trans({}, "SMFrontBundle") }}</th>
                        <th>{{ 'New price'|trans({}, "SMFrontBundle") }}</th>
                    </tr>
                    {% if items|length  > 0%}
                        {% set i = 0 %}
                        {% for item in items %}
                            {% set class = 'style-1' %}
                            {% set c = i % 2 %}
                            {% set i = i + 1 %}
                            {% if c == 0 %}
                                {% set class = '' %}
                            {% endif %}
                            <tr class="{{class}}">
                                <td>{{item.name}}</td>
                                <td>{{item.price}}</td>
                                <td>{{item.oldprice}}</td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                </table>
            {% endfor %}
        </div>
        <a class="readmore" title="{{ 'View more'|trans({}, 'SMFrontBundle') }}" href="{{ path('sm_front_item_view_all') }}">{{ 'View more'|trans({}, 'SMFrontBundle') }}</a>
    </div>
{% endif %}